<Window x:Class="PaneleWPF.OknoGridSpliter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaneleWPF"
        mc:Ignorable="d"
        Title="OknoGridSpliter" Height="257" Width="570">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock FontSize="55" TextWrapping="Wrap">Lewa strona</TextBlock>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
        <TextBlock Grid.Column="2" FontSize="55" TextWrapping="Wrap">Prawa strona</TextBlock>
        
    </Grid>
</Window>
